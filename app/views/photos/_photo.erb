<%= f.fields_for "photos" do |photo| %>
  <ol class='photos'>
  <% @user_photos.each do |p| %>
  <%= photo.input :data, as: :boolean, input_html: { id: p.id, value: "{\"id\":#{p.id.to_json},\"caption\":#{p.caption.to_json},\"images\":#{p.images.to_json}}", name: 'album[photos][data][]' }, label: "#{image_tag(p.images.thumbnail.url)}<p>#{truncate(p.caption ? p.caption.text : '', length: 63, omission: '...')}</p>".html_safe %>
  <% end %>
</ol>
<% end %>

<%= link_to 'Load more photos', load_photos_path(max_id: @page_max_id), class: 'button load', remote: true, id: 'load-more' %>

