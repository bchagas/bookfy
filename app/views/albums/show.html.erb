<% if current_user %>
  <div class='btn-group'>
    <%= link_to 'Back', albums_path, class: 'btn btn-primary' %>
    <%= link_to 'Add photos', new_album_photo_path(@album), class: 'btn btn-primary' %>
  </div>
<hr>
<% end %>

<%= @album.name %>
<% if current_user %>
  <%= link_to 'Remove Album', album_path(@album), confirm: 'Are you sure?', method: :delete %>
  <%= link_to 'Edit Album', edit_album_path(@album) %>
<% end %>
<br>
<ul>
  <% @photos.each do |photo| %>
  <li>
    <%= link_to image_tag(photo.images.thumbnail.url), photo.images.standard_resolution.url %>

    <% unless photo.caption.nil? %>
      <p><%= photo.caption.text %></p>
    <% end %>

    <% if current_user %>
      <%= link_to 'Remove', album_photo_path(@album, photo.id), confirm: 'Are you sure?', method: :delete %>
    <% end %>
  </li>
  <% end %>
</ul>
