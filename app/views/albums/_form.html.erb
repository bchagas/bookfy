<%= f.inputs "#{action_name} album" do %>
  <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
  <%= f.input :name, label: false, placeholder: 'Album name*' %>
<% end %>
<%= f.actions do %>
  <%= link_to 'Cancel', '#', class: 'button', :rel => "modal:close" %>
  <%= f.submit 'Save' %>
<% end %>
