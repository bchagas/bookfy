<!DOCTYPE html>
<html>
  <head>
    <title>Instabooks</title>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= stylesheet_link_tag "bootflat", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

  <div id="user-nav">
    <% if current_user %>
      <div class='container'>
        <div class='row'>
          <div class='col-md-1 header-logo'>
            <%= fa_icon 'book' %>
          </div>

          <div class='col-md-6 col-md-offset-5'>
            <small>Signed in as <%= current_user.name %></small>

            <div class='btn-group'>
              <%= link_to "Create album", new_album_path, class: 'btn btn-primary' %>
              <%= link_to "Show albums", albums_path, class: 'btn btn-primary' %>
              <%= link_to "Sign out", signout_path, class: 'btn' %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <hgroup class='logo'>
        <h1><%= fa_icon 'book' %></h1>
      </hgroup>

      <%= link_to "Sign in with Instagram", "/auth/instagram", class: 'btn btn-block' %>
    <% end %>
  </div>

  <hr>

  <div class='container'>
    <%= yield %>
  </div>
  </body>
</html>
